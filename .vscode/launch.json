{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug pytest (backend)",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": ["-q"],
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Debug Vitest (frontend)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test", "--", "--run"],
      "console": "integratedTerminal",
      "env": {
        "CI": "true"
      }
    }
  ]
}
