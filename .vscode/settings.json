{
// Backend Python tests
// ⚠️ DISABLED: Running full pytest suite crashes VS Code (490+ tests)
// Use RUN_TESTS_BATCH.ps1 instead (batch runner)
"python.testing.pytestEnabled": false,
"python.testing.cwd": "${workspaceFolder}/backend",
"python.testing.autoTestDiscoverOnSaveEnabled": false,
"python.terminal.activateEnvironment": false,
"python.terminal.activateEnvInCurrentTerminal": false,

// Testing experience
"testing.gutterClickBehavior": "run",
"testing.autoRun": "off",
"testing.showInlineErrorMessages": true,

// Terminals for tasks should use PowerShell on Windows
// SMS Terminal Encoding Fix (Jan 13, 2026)
// Loads the UTF-8 encoding profile to prevent ψ character corruption
"terminal.integrated.defaultProfile.windows": "PowerShell (SMS)",
"terminal.integrated.profiles.windows": {
"PowerShell (SMS)": {
"source": "PowerShell",
"args": [
"-NoProfile",
"-NoExit",
"-ExecutionPolicy",
"Bypass",
"-File",
"${workspaceFolder}\\.vscode\\powershell-profile.ps1"
]
}
},

// Fix Greek character encoding issues
"files.encoding": "utf8",
"files.autoGuessEncoding": false,
"files.eol": "\n",  // Always use LF (Unix) line endings - prevents CRLF/LF mixed line ending errors

// Terminal encoding and safety settings
"terminal.integrated.unicodeVersion": "11",
"terminal.integrated.gpuAcceleration": "off",
"terminal.integrated.localEchoEnabled": "off",
"terminal.integrated.enablePersistentSessions": true,
"terminal.integrated.shellIntegration.enabled": true,
"terminal.integrated.shellIntegration.suggestEnabled": false,
"terminal.integrated.shellIntegration.showWelcome": false,
"terminal.integrated.confirmOnExit": "always",
"terminal.integrated.commandsToSkipShell": [],
"terminal.integrated.scrollback": 10000,
"terminal.integrated.fastScrollSensitivity": 5,
"terminal.integrated.env.windows": {
"PYTHONIOENCODING": "utf-8",
"PYTHONUNBUFFERED": "1",
"TERM": "dumb",
"GIT_TERMINAL_PROMPT": "0"
},

// PowerShell specific settings
"powershell.integratedConsole.suppressStartupBanner": true,
"powershell.integratedConsole.startInBackground": false,
"powershell.powerShellDefaultVersion": "PowerShell (x64)",

// Python analysis
"python.analysis.typeCheckingMode": "standard",

// Copilot chat preferences
"github.copilot.chat.languageContext.typescript.includeDocumentation": true,
"github.copilot.chat.languageContext.fix.typescript.enabled": true,
"github.copilot.chat.languageContext.inline.typescript.enabled": true,
"github.copilot.chat.languageContext.typescript.enabled": true,

// CodeQL: set your CLI path and default database directory here
// Update the executablePath to your local CodeQL CLI binary
"codeQL.cli.executablePath": "C:/tools/codeql/codeql.exe",
// Update the default database location to where you keep CodeQL DBs for this repo
"codeQL.defaultDatabaseLocation": "${workspaceFolder}/.codeql/databases"
}
