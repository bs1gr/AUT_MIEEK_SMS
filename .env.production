# Production Environment Configuration - v1.17.6
# Generated: January 31, 2026

# ==================== VERSION ====================
VERSION=1.17.6

# ==================== SECURITY ====================
SECRET_KEY=sms-production-secret-key-2026-minimum-32-chars

# ==================== AUTHENTICATION ====================
AUTH_ENABLED=True
AUTH_MODE=permissive

# ==================== ADMIN BOOTSTRAP ====================
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=AdminProduction2026!
DEFAULT_ADMIN_FULL_NAME=System Administrator

# ==================== DATABASE (PostgreSQL for Production) ====================
# These variables are used by docker-compose.prod.yml
POSTGRES_USER=sms_user
POSTGRES_PASSWORD=SecurePassword2026!
POSTGRES_DB=student_management
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# For backend environment
DATABASE_ENGINE=docker
POSTGRES_SSLMODE=prefer

# ==================== REDIS ====================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==================== APPLICATION ====================
SMS_ENV=production
CORS_ORIGINS=http://localhost:8080
ENABLE_CONTROL_API=1

# ==================== RATE LIMITING ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_READ=60/minute
RATE_LIMIT_WRITE=10/minute

# ==================== MONITORING ====================
MONITORING_ENABLED=false
LOG_LEVEL=INFO

# ==================== BACKUP ====================
BACKUP_RETENTION_DAYS=30
